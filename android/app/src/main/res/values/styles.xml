<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>


    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <!-- Splash screen background color (Android 12+) -->
        <item name="android:windowSplashScreenBackground">@color/splashBackground</item>

        <!-- Splash screen icon (Android 12+) -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>

        <!-- Optional: Icon background for better contrast (Android 12+) -->
        <!-- <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item> -->

        <!-- Legacy splash for Android 11 and below -->
        <item name="android:background">@drawable/splash</item>
    </style>
</resources>